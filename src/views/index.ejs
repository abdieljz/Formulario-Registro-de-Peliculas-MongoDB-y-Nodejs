<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    
    <title>Registro Peliculas</title>
    <style>
        .cont {
            text-align: center;
        }

        .head {
            background-color: green;
        }

        .tody {
            background-color: hsl(26, 17%, 92%);
        }

        .row {
            margin-bottom: 20px;
            padding: 20px;
            background-color: #f5f5f5;
            border-radius: 20px;
            box-shadow: 12px 12px 12px gray;
        }
        .bt:hover{
            background-color: white;
            color:black;
            border:1px solid #bd9a87;
        }
        .bt{
            background-color: #bd9a87;
            border:none;
        }
        .tew{
            margin: 0 auto;
        }
        .text{
            color:white;
        }
        .cont2{
            text-align: center;
        }
        .na{
            background-color: #bd9a87;
            
        }

    </style>
</head>

<body>
    <div class="container-fluid">
        <nav class="navbar navbar-expand-md border-4 border-bottom border-primary na">       
            <div class="container-fluid cont2 ">
                <a href="/" class="navbar-brand text">Registro de Peliculas - Grupo 2</a>
                <h2 class="text">Universidad de las Fuerzas Armadas "ESPE"</h2>
                <h2 class="text">Registro de Peliculas en MongoDB</h2>   
            </div>
        </nav>
    </div>

    <pre>
    </pre>
    <div class="container">
        <div class="row">
            <!--Ingresar los datos-->
            <div class="col-md-3 ">
                <div class="card">
                    <div class="card-body">
                        <form action="/add" method="post">
                            <div class="form-group">
                                <label for="">Titulo</label></br>
                                <input type="text" name="Titulo" id="" placeholder="Ingresar Titulo"
                                    class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label for="">Direccion</label></br>
                                <input type="text" name="Direccion" id="" placeholder="Director" class="form-control"
                                    required>
                            </div>
                            <div class="form-group">
                                <label for="">Año Publicación</label></br>
                                <input type="date" name="Anio" id="" value="" min="2000-01-01" max="2021-12-31"
                                    class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label for="">Duracion de la pelicula</label></br>
                                <input type="text" name="Duracion" id="" placeholder="Duración" class="form-control"
                                    required>
                            </div>
                            <div class="form-group">
                                <label for="">Genero</label></br>
                                <input type="text" name="Genero" id="" placeholder="Genero" class="form-control"
                                    required>
                            </div>
                            <div class="form-group">
                                <label for="">Productora</label></br>
                                <input type="text" name="Productora" id="" placeholder="Productora" class="form-control"
                                    required>
                            </div>
                            <div class="form-group">
                                <label for="">Sinopsis</label></br>
                                <textarea name="Sinopsis" id="" cols="23" rows="5" class="form-control"
                                    required></textarea></br>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block form-control bt">Guardar
                                    Pelicula</button>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
            <!--Listar los datos-->
            <div class="col-md-9">
                <table class="table table-bordered table-hover">
                    <thead class="head">
                        <tr>
                            <th>Nº</th>
                            <th>Titulo</th>
                            <th>Direccion</th>
                            <th>Publicación</th>
                            <th>Duracion</th>
                            <th>Genero</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="tody">
                        <% for(var i=0 ; i < tasks.length; i++){ %>
                            <tr>
                                <td>
                                    <%= i + 1 %>
                                </td>
                                <td>
                                    <%= tasks[i].Titulo %>
                                </td>
                                <td>
                                    <%= tasks[i].Direccion %>
                                </td>
                                <td>
                                    <%= tasks[i].Anio %>
                                </td>
                                <td>
                                    <%= tasks[i].Duracion %>
                                </td>
                                <td>
                                    <%= tasks[i].Genero %>
                                </td>
                                <td>
                                    <a href="/second/<%= tasks[i]._id%>"><span class="iconify"
                                            data-icon="dashicons:edit-page" data-width="auto"
                                            data-height="auto"></span></span></a>
                                    <a href="/Eliminar%Pelicula/<%= tasks[i]._id%>"><span class="iconify"
                                            data-icon="dashicons:dismiss" style="color: red;" data-width="auto"
                                            data-height="auto"></span></a>
                                </td>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
            </div>

        </div>
        
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
    <script src="https://code.iconify.design/2/2.1.0/iconify.min.js"></script>
</body>

</html>